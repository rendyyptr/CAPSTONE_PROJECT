<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".ui.user.UserFragment">


    <Button
        android:id="@+id/btnProfileSettings"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Profile Settings"
        android:textColor="#252525"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAppSettings"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="App Settings"
        android:textColor="#252525"
        app:layout_constraintEnd_toEndOf="@+id/btnProfileSettings"
        app:layout_constraintStart_toStartOf="@+id/btnProfileSettings"
        app:layout_constraintTop_toBottomOf="@+id/btnProfileSettings" />

    <Button
        android:id="@+id/btnTermOfService"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Term of Service"
        android:textColor="#252525"
        app:layout_constraintEnd_toEndOf="@+id/btnAppSettings"
        app:layout_constraintStart_toStartOf="@+id/btnAppSettings"
        app:layout_constraintTop_toBottomOf="@+id/btnAppSettings" />

    <Button
        android:id="@+id/btnSubscription"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Subscription"
        android:textColor="#252525"
        app:layout_constraintEnd_toEndOf="@+id/btnTermOfService"
        app:layout_constraintStart_toStartOf="@+id/btnTermOfService"
        app:layout_constraintTop_toBottomOf="@+id/btnTermOfService" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_regular"
        android:padding="5dp"
        android:text="Logout"
        app:cornerRadius="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>